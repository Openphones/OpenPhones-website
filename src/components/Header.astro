---
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
    <a href="/">
        <h2>OpenPhones</h2>
    </a>
    <nav>
        <ThemeToggle />
        <a href="#cart" title="Cart">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 96 960 960"
                ><path
                    d="M220 976q-24 0-42-18t-18-42V396q0-24 18-42t42-18h110v-10q0-63 43.5-106.5T480 176q63 0 106.5 43.5T630 326v10h110q24 0 42 18t18 42v520q0 24-18 42t-42 18H220Zm0-60h520V396H630v90q0 12.75-8.675 21.375-8.676 8.625-21.5 8.625-12.825 0-21.325-8.625T570 486v-90H390v90q0 12.75-8.675 21.375-8.676 8.625-21.5 8.625-12.825 0-21.325-8.625T330 486v-90H220v520Zm170-580h180v-10q0-38-26-64t-64-26q-38 0-64 26t-26 64v10ZM220 916V396v520Z"
                ></path></svg
            >
            <p id="cart-badge">0</p>
        </a>
    </nav>
</header>

<style lang="scss">
    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
        border-bottom: 1px solid var(--variant);

        h2 {
            margin: 0;
        }

        a {
            color: var(--text);
            position: relative;
            background-color: var(--bg);
            padding: 0.5rem;
            border-radius: 0.5rem;

            &::before {
                content: "";
                position: absolute;
                z-index: -1;
                transition: all 0.25s;
                background: var(--gradient);
                filter: var(--filter);
                inset: -0.125rem;
                opacity: 0;
            }

            &:hover::before {
                opacity: 1;
            }
        }

        svg {
            display: inline-block;
            height: 2rem;
        }

        nav {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        p {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: 0;
            font-size: 1rem;
            background: var(--gradient);
            color: var(--button-text);
            border-radius: 0.125rem;
            width: 1.25rem;
            text-align: center;
        }
    }
</style>

<script is:inline>
    function updateCart() {
        var cart = JSON.parse(localStorage.getItem("cart"));
        var cartBadge = document.getElementById("cart-badge");
        cartBadge.innerHTML = Object.values(cart).reduce((a, b) => a + b);
    }
</script>
