<select id="currency-select" title="Currency selector">
  {currencies.map((currency) => <option value={currency}>{currency}</option>)}
</select>

<style lang="scss">
  select {
    background-color: var(--bg);
    color: var(--text);
    border: none;
    font-size: 1rem;
    cursor: pointer;

    &:focus-visible {
      outline: none;
    }
  }
</style>

<script>
  // Getting reference to the currency select element
  const currencySelect = document.getElementById(
    "currency-select"
  ) as HTMLSelectElement;

  // Object to handle currency selection and updates
  const currency = {
    currency: null,

    // Method to initialize the currency selection
    init(el) {
      this.currency = localStorage.getItem("currency") ?? "USD";
      localStorage.setItem("currency", this.currency);
      el.value = this.currency;
    },

    // Method to update the currency value
    update(el) {
      this.currency = el.value;
      localStorage.setItem("currency", this.currency);
    },
  };

  // Initialize the currency selection
  currency.init(currencySelect);

  // Event listener for currency select change
  currencySelect.addEventListener("change", () =>
    currency.update(currencySelect)
  );
</script>
