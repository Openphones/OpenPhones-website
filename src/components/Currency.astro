<select id="currency">
    {currencies.map((currency) => <option value={currency}>{currency}</option>)}
</select>

<style lang="scss">
    select {
        background-color: var(--bg);
        color: var(--text);
        border: none;
        font-size: 1rem;
        cursor: pointer;

        &:focus-visible {
            outline: none;
        }
    }
</style>

<script is:inline>
    var currencySelector = document.getElementById("currency");
    currencySelector.value = sessionStorage.getItem("currency")
        ? sessionStorage.getItem("currency")
        : "USD";
    currencySelector.addEventListener("change", () => {
        sessionStorage.setItem("currency", currencySelector.value);
        location.reload();
    });
</script>
