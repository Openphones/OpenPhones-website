  main {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 64rem;
    max-width: 88vw;
    margin: auto;
    padding: 1rem 0;
    text-align: justify;

    h1 {
      text-align: center;
    }

    h2 {
      margin: 0.75rem 0;
    }

    h3 {
      margin: 0.5rem 0;
    }

    a {
      color: var(--link);

      &:hover {
        text-decoration: underline;
      }
    }

