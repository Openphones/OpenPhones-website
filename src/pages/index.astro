---
import Store from "../components/Store.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="OpenPhones" description="Get secure GrapheneOS phones without overpaying or sacrificing privacy.">
	<main>
		<div class="header">
			<h1>Store (Not accepting orders yet!)</h1>
			<h2>Get secure GrapheneOS phones without overpaying or sacrificing privacy.</h2>
		</div>
		<Store />
	</main>
</BaseLayout>

<style lang="scss">
	main {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 64rem;
		max-width: 88vw;
		margin: auto;
		padding: 1rem 0;

		.header {
			text-align: center;

			h1 {
				font-size: 3rem;
			}
		}
	}
</style>
